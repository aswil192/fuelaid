	<form action="/auth/login" method="POST" class="login-form w-50 bg-white p-5 m-auto" style="min-width: 320px; border-radius: 10px; box-shadow: 0 10px 40px rgba(0, 0, 0, 0.1); position: relative; z-index: 10;">
