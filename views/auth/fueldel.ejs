<div class="m-0 pt-5 w-100 bg-img-1">
	<form action="/auth/fueldel" method="POST" class="w-50 bg-white p-5 m-auto" style="min-width: 320px;">
		<h3 class="text-center mb-3">Fuel Delivery Boy Joining Form</h3>

		<% if(typeof errors != 'undefined') { %>
			<% errors.forEach(function(error) { %>
				<div class="alert alert-danger alert-dismissible fade show" role="alert">
					<%= error.msg %>
					<button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
				</div>
			<% }); %>
		<% } %>
		
		<div class="mb-3">
			<label for="first-name" class="form-label">First name</label>
			<input type="text" name="firstName" class="form-control" id="first-name" placeholder="Enter first name.." value="<%= typeof firstName != 'undefined' ? firstName : '' %>" required autofocus>
		</div>
		
		<div class="mb-3">
			<label for="last-name" class="form-label">Last name</label>
			<input type="text" name="lastName" class="form-control" id="last-name" placeholder="Enter last name.." value="<%= typeof lastName != 'undefined' ? lastName : '' %>" required>
		</div>
		
		<div class="mb-3">
			<label for="email" class="form-label">Email address</label>
			<input type="email" name="email" class="form-control" id="email" placeholder="Enter email.." value="<%= typeof email != 'undefined' ? email : '' %>" required>
			<div class="form-text">We'll never share your email with anyone else.</div>
		</div>

		<div class="mb-3">
			<label for="acn" class="form-label">Aadhaar Card Number</label>
			<input type="number" name="acn" class="form-control" id="acn" placeholder="Enter Aadhaar Card Number.." value="<%= typeof acn != 'undefined' ? acn : '' %>" required>
			<!-- <div class="form-text">Corporate Identification Number or Aadhaar Card Number or NGO Darpan ID</div> -->
		</div>


        <div class="mb-3">
            <label class="form-label">Police Verification Certificate (Optional)</label>
            <input type="file" name="policeVerification" class="form-control">
        </div>

        <div class="mb-3">
			<label for="age" class="form-label">Age</label>
			<input type="number" name="age" class="form-control" id="age" placeholder="Enter Age.." value="<%= typeof age != 'undefined' ? age : '' %>" required>
		</div>

		<div class="mb-3">
			<label for="address" class="form-label">Address</label>
			<input type="text" name="address" class="form-control" id="address" placeholder="Enter Address.." value="<%= typeof address != 'undefined' ? address : '' %>" required>
			<!-- <div class="form-text">We'll never share your email with anyone else.</div> -->
		</div>

		<div class="mb-3">
			<label for="phone" class="form-label">Phone</label>
			<input type="number" name="phone" class="form-control" id="phone" placeholder="Enter phone number.." value="<%= typeof phone != 'undefined' ? phone : '' %>" required>
		</div>

        <div class="mb-3">
			<label for="experience" class="form-label">Years of experience</label>
			<input type="number" name="experience" class="form-control" id="experience" placeholder="Enter experience.." value="<%= typeof experience != 'undefined' ? experience : '' %>" required>
		</div>

		<div class="mb-3">
			<label for="employer" class="form-label">Any previous employer or company name</label>
			<textarea name="employer" class="form-control" id="employer" placeholder="If your answer is no enter NA..." required><%= typeof employer != 'undefined' ? employer : '' %></textarea>
		</div>

        <div class="mb-3">
            <label for="vehicle" class="form-label">Vehicle Type</label>
            <select name="vehicleType" class="form-control" id="vehicleType" required>
              <option value="">Select Vehicle Type</option>
              <option value="Bike">Bike</option>
              <option value="Scooter">Scooter</option>
              <option value="Truck">Small Truck</option>
              <option value="Other">Others</option>
            </select>
          </div>

          <div class="mb-3">
            <label for="vehicleNumber" class="form-label">Vehicle Registration Number</label>
            <input type="text" name="vehicleNumber" class="form-control" id="vehicleNumber" value="<%= typeof vehicleNumber != 'undefined' ? vehicleNumber : '' %>">
          </div>

          <div class="mb-3">
			<label for="role" class="form-label">Role</label>
			<select class="form-select" name="role" id="role">
				<option value="fuelboy">Fuel Delivery Boy</option>
			</select>
		</div>

        <!-- Declaration -->
        <div class="form-check mb-3">
            <input type="checkbox" class="form-check-input" id="declaration" required>
            <label class="form-check-label" for="declaration">
            I certify that the information provided is true and I agree to follow all safety guidelines during fuel delivery.
            </label>
        </div>
		
		<button type="submit" class="btn d-block m-auto mt-4">Submit Application</button>
		
	</form>
</div>
