<body>
	<%- include('../partials/header') %>
	<%- include('../partials/alerts') %>

<style>
  :root {
    --primary-color: #5b5fc7;
    --secondary-color: #3a86ff;
    --warning-color: #fca311;
    --card-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    --card-radius: 12px;
  }

  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf5 100%);
  }

  header{
    background-color: #403d3d!important;
  }
  
  header .navbar, .bg-dark, .navbar-dark, .navbar-light {
    background-color: #403d3d!important;
    background-image: none !important;
    box-shadow: none !important;
  }

  .bg-white.shadow-sm.p-3 {
    background: white !important;
    box-shadow: 0 4px 15px rgba(0, 0, 0, 0.08) !important;
    border-radius: var(--card-radius);
    margin: 1rem;
    animation: slideDown 0.6s ease-out;
  }

  @keyframes slideDown {
    from {
      opacity: 0;
      transform: translateY(-20px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  #main-wrapper .m-4 {
    padding: 0 1rem;
  }

  .bg-white.mb-4.p-4.shadow-sm {
    background: white !important;
    border-radius: var(--card-radius) !important;
    box-shadow: var(--card-shadow) !important;
    border: none !important;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1) !important;
    animation: slideUp 0.6s ease-out;
  }

  @keyframes slideUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .bg-white.mb-4.p-4.shadow-sm:hover {
    transform: translateY(-4px) !important;
    box-shadow: 0 8px 25px rgba(91, 95, 199, 0.15) !important;
  }

  .bg-white.mb-4.p-4.shadow-sm strong {
    color: #1a1a2e !important;
    font-weight: 700 !important;
  }

  .bg-white.mb-4.p-4.shadow-sm div {
    animation: fadeInUp 0.6s ease-out both;
  }

  .bg-white.mb-4.p-4.shadow-sm div:nth-child(1) { animation-delay: 0.1s; }
  .bg-white.mb-4.p-4.shadow-sm div:nth-child(2) { animation-delay: 0.2s; }
  .bg-white.mb-4.p-4.shadow-sm div:nth-child(3) { animation-delay: 0.3s; }
  .bg-white.mb-4.p-4.shadow-sm div:nth-child(4) { animation-delay: 0.4s; }
  .bg-white.mb-4.p-4.shadow-sm div:nth-child(5) { animation-delay: 0.5s; }
  .bg-white.mb-4.p-4.shadow-sm div:nth-child(6) { animation-delay: 0.6s; }
  .bg-white.mb-4.p-4.shadow-sm div:nth-child(7) { animation-delay: 0.7s; }

  @keyframes fadeInUp {
    from {
      opacity: 0;
      transform: translateY(15px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  .text-orange {
    color: var(--warning-color) !important;
    font-weight: 700 !important;
  }

  .color-theme {
    color: var(--primary-color) !important;
    font-weight: 700 !important;
  }

  .text-center.text-muted {
    color: #999 !important;
    font-size: 1.1rem !important;
    padding: 2rem !important;
    animation: fadeInUp 0.6s ease-out;
  }

  ul {
    padding-left: 1.5rem;
  }

  ul li {
    color: #333;
    margin-bottom: 0.5rem;
  }

  img {
    border-radius: 8px !important;
    transition: all 0.3s ease !important;
  }

  img:hover {
    transform: scale(1.02);
    box-shadow: 0 4px 12px rgba(91, 95, 199, 0.2) !important;
  }

  .logo-container img {
    height: 0.9em;
    width: auto;
  }
</style>
<main>
	<%- include('../partials/customerSidebar') %>
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<br>
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Pending Requests</h5>
		</div>
	<div class="m-4">
		<% if (requestedServices.length === 0) { %>
		  <p class="text-center text-muted">No requested services yet.</p>
		<% } else { %>
		  <% requestedServices.forEach(service => { %>
			<div class="bg-white mb-4 p-4 shadow-sm">
			  
			  <div class="mb-2">
				<strong>Service Category:</strong>
				<span><%= service.serviceCategory %></span>
			  </div>
	  
			  <div class="mb-2">
				<strong>Sub-services:</strong>
				<ul class="mb-0">
				  <% service.subServices.forEach(sub => { %>
					<li><%= sub %></li>
				  <% }) %>
				</ul>
			  </div>
	  
			  <% if (service.quantity) { %>
			  <div class="mb-2">
				<strong>Quantity:</strong>
				<span><%= service.quantity %></span>
			  </div>
			  <% } %>
	  
			  <div class="mb-2">
				<strong>Address:</strong>
				<span><%= service.address %></span>
			  </div>
	  
			  <div class="mb-2">
				<strong>Phone:</strong>
				<span><%= service.phone %></span>
			  </div>
	  
			  <% if (service.vehiclePhotoPath) { %>
			  <div class="mb-2">
				<strong>Vehicle Photo:</strong><br>
				<img src="/<%= service.vehiclePhotoPath %>" alt="Vehicle" style="max-width: 200px; border: 1px solid #ddd; border-radius: 6px;">
			  </div>
			  <!-- <p><strong>Debug Path:</strong> <%= service.vehiclePhotoPath %></p> -->

			  <% } %>
	  
			  <% if (service.customerToMechanicMsg) { %>
			  <div class="mb-2">
				<strong>Message to Mechanic:</strong>
				<span><%= service.customerToMechanicMsg %></span>
			  </div>
			  <% } %>
	  
			  <div class="mb-2">
				<strong>Status:</strong>
				<span class="text-orange fw-bold">Requested</span>
			  </div>
	  
			  <div class="mb-2">
				<strong>Time of Request:</strong>
				<span><%= service.createdAt.toLocaleString("en-IN", { dateStyle: "medium", timeStyle: "short" }) %></span>
			  </div>
	  
			</div>
		  <% }) %>
		<% } %>
	  </div>
	</div>
	  
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
