    /* How It Works Section */
    .how-it-works {
        margin: 40px 20px;
        animation: slideInUp 1s ease-out 0.4s backwards;
    }

    .how-it-works img {
        border-radius: 15px;
        transition: all 0.4s cubic-bezier(0.68, -0.55, 0.265, 1.55);
        box-shadow: 0 8px 20px rgba(0,0,0,0.1);
        animation: fadeInScale 0.6s ease-out backwards;
    }

    .how-it-works img:nth-child(1) { animation-delay: 0.1s; }
    .how-it-works img:nth-child(2) { animation-delay: 0.2s; }
    .how-it-works img:nth-child(3) { animation-delay: 0.3s; }
    .how-it-works img:nth-child(4) { animation-delay: 0.4s; }

    .how-it-works img:hover {
        transform: translateY(-15px) scale(1.05);
        box-shadow: 0 15px 40px rgba(52, 152, 219, 0.3);
    }

    .how-it-works .col-md-3 {
        perspective: 1000px;
    }

    .how-it-works p {
        color: #34495e;
        font-size: 18px;
        line-height: 1.6;
        animation: slideInUp 0.8s ease-out 0.2s backwards;
