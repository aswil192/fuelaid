<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="UTF-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<meta name="theme-color" content="#3f51b5">
	<link href="https://fonts.googleapis.com/css?family=Dosis:200,300,400,500,700" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Overpass:300,400,400i,600,700" rel="stylesheet">

    <link rel="stylesheet" href="/assets/css/open-iconic-bootstrap.min.css">
    <link rel="stylesheet" href="/assets/css/animate.css">
    
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">

    <link rel="stylesheet" href="/assets/css/aos.css">

    <link rel="stylesheet" href="/assets/css/ionicons.min.css">

    <link rel="stylesheet" href="/assets/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="/assets/css/jquery.timepicker.css">

    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/icomoon.css">
	<link rel="stylesheet" href="/assets/css/style.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/sidebar.css">
	<link rel="icon" type="image/png" href="/assets/images/FUEL AID_logo.png">
	<title><%= typeof title != 'undefined' ? title : "Payment - FuelAid" %></title>
</head>

<body>
	<%- include('../partials/header') %>
	<%- include('../partials/alerts') %>

<style>
	:root {
		--primary-color: #5b5fc7;
		--secondary-color: #3a86ff;
		--success-color: #06d6a0;
		--warning-color: #fca311;
		--card-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
		--card-radius: 16px;
	}

	body {
		background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf5 100%);
	}

	header {
		background-color: #403d3d !important;
	}

	header .navbar, .bg-dark, .navbar-dark, .navbar-light {
		background-color: #403d3d !important;
		background-image: none !important;
		box-shadow: none !important;
	}

	.logo-container img {
		height: 0.9em;
		width: auto;
	}

	#main-wrapper {
		overflow-y: auto;
		min-height: 100vh;
		padding-bottom: 40px;
	}

	.page-header {
		background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
		padding: 25px 30px;
		border-radius: var(--card-radius);
		margin: 20px;
		box-shadow: 0 8px 25px rgba(91, 95, 199, 0.3);
		display: flex;
		align-items: center;
		gap: 15px;
		animation: slideInDown 0.6s ease-out;
	}

	.page-header h5 {
		color: white;
		margin: 0;
		font-size: 26px;
		font-weight: 700;
	}

	.page-header i {
		font-size: 24px;
		color: white;
	}

	@keyframes slideInDown {
		from {
			opacity: 0;
			transform: translateY(-30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	@keyframes slideInUp {
		from {
			opacity: 0;
			transform: translateY(30px);
		}
		to {
			opacity: 1;
			transform: translateY(0);
		}
	}

	.payment-container {
		padding: 0 20px;
		max-width: 800px;
		margin: 0 auto;
	}

	.payment-card {
		background: white;
		border-radius: var(--card-radius);
		box-shadow: var(--card-shadow);
		overflow: hidden;
		animation: slideInUp 0.6s ease-out;
	}

	.payment-header {
		background: linear-gradient(135deg, var(--success-color), #05b793);
		padding: 30px;
		text-align: center;
		color: white;
	}

	.payment-header .amount {
		font-size: 3rem;
		font-weight: 700;
		margin: 10px 0;
	}

	.payment-header .amount-label {
		font-size: 14px;
		opacity: 0.9;
		text-transform: uppercase;
		letter-spacing: 1px;
	}

	.service-details {
		padding: 25px 30px;
		border-bottom: 1px solid #e9ecef;
	}

	.service-details h6 {
		color: #333;
		font-weight: 700;
		margin-bottom: 15px;
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.service-details h6 i {
		color: var(--primary-color);
	}

	.detail-row {
		display: flex;
		justify-content: space-between;
		padding: 10px 0;
		border-bottom: 1px dashed #e9ecef;
	}

	.detail-row:last-child {
		border-bottom: none;
	}

	.detail-row .label {
		color: #666;
		font-weight: 500;
	}

	.detail-row .value {
		color: #333;
		font-weight: 600;
	}

	.payment-methods {
		padding: 25px 30px;
	}

	.payment-methods h6 {
		color: #333;
		font-weight: 700;
		margin-bottom: 20px;
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.payment-methods h6 i {
		color: var(--warning-color);
	}

	.method-options {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 15px;
	}

	.method-option {
		border: 2px solid #e9ecef;
		border-radius: 12px;
		padding: 20px;
		text-align: center;
		cursor: pointer;
		transition: all 0.3s ease;
	}

	.method-option:hover {
		border-color: var(--primary-color);
		background: #f8f9ff;
	}

	.method-option.selected {
		border-color: var(--primary-color);
		background: linear-gradient(135deg, rgba(91, 95, 199, 0.1), rgba(58, 134, 255, 0.1));
	}

	.method-option input {
		display: none;
	}

	.method-option i {
		font-size: 32px;
		color: var(--primary-color);
		margin-bottom: 10px;
		display: block;
	}

	.method-option span {
		font-weight: 600;
		color: #333;
	}

	.payment-actions {
		padding: 25px 30px;
		background: #f8f9fa;
	}

	.btn-pay {
		background: linear-gradient(135deg, var(--success-color), #05b793);
		color: white;
		border: none;
		border-radius: 12px;
		padding: 15px 40px;
		font-size: 18px;
		font-weight: 700;
		width: 100%;
		cursor: pointer;
		transition: all 0.3s ease;
		box-shadow: 0 8px 20px rgba(6, 214, 160, 0.3);
		display: flex;
		align-items: center;
		justify-content: center;
		gap: 10px;
	}

	.btn-pay:hover {
		transform: translateY(-3px);
		box-shadow: 0 12px 30px rgba(6, 214, 160, 0.4);
	}

	.btn-pay:disabled {
		background: #ccc;
		cursor: not-allowed;
		transform: none;
		box-shadow: none;
	}

	.secure-badge {
		text-align: center;
		margin-top: 15px;
		color: #666;
		font-size: 13px;
	}

	.secure-badge i {
		color: var(--success-color);
		margin-right: 5px;
	}

	.provider-info {
		display: flex;
		align-items: center;
		gap: 15px;
		padding: 15px;
		background: #f8f9fa;
		border-radius: 12px;
		margin-top: 15px;
	}

	.provider-info img {
		width: 60px;
		height: 60px;
		border-radius: 50%;
		object-fit: cover;
		border: 3px solid var(--primary-color);
	}

	.provider-info .info {
		flex: 1;
	}

	.provider-info .info h6 {
		margin: 0 0 5px;
		color: #333;
	}

	.provider-info .info p {
		margin: 0;
		color: #666;
		font-size: 13px;
	}

	@media (max-width: 768px) {
		.page-header {
			margin: 15px 10px;
		}

		.payment-container {
			padding: 0 10px;
		}

		.method-options {
			grid-template-columns: 1fr;
		}

		.payment-header .amount {
			font-size: 2.5rem;
		}
	}
</style>

<main>
	<%- include('../partials/customerSidebar') %>
	
	<div id="main-wrapper">
		<!-- Page Header -->
		<div class="page-header">
			<i class="fas fa-credit-card"></i>
			<h5>Make Payment</h5>
		</div>

		<div class="payment-container">
			<div class="payment-card">
				<!-- Payment Amount Header -->
				<div class="payment-header">
					<div class="amount-label">Total Amount</div>
					<div class="amount">₹<%= service.fee || service.baseAmount || 100 %></div>
					<div class="amount-label">For <%= service.serviceCategory.toUpperCase() %> Service</div>
				</div>

				<!-- Service Details -->
				<div class="service-details">
					<h6><i class="fas fa-info-circle"></i> Service Details</h6>
					
					<div class="detail-row">
						<span class="label">Service Category</span>
						<span class="value"><%= service.serviceCategory.toUpperCase() %></span>
					</div>
					
					<div class="detail-row">
						<span class="label">Sub-services</span>
						<span class="value"><%= service.subServices.join(', ') %></span>
					</div>
					
					<div class="detail-row">
						<span class="label">Service Date</span>
						<span class="value"><%= service.completedAt ? new Date(service.completedAt).toLocaleDateString('en-IN', { dateStyle: 'medium' }) : new Date(service.createdAt).toLocaleDateString('en-IN', { dateStyle: 'medium' }) %></span>
					</div>

					<% if (provider) { %>
					<div class="provider-info">
						<img src="<%= provider.profilePic || '/assets/images/default-avatar.png' %>" alt="Provider">
						<div class="info">
							<h6><%= provider.firstName %> <%= provider.lastName %></h6>
							<p><i class="fas fa-phone me-1"></i> <%= provider.phone %></p>
							<p><i class="fas fa-star me-1" style="color: #f39c12;"></i> <%= provider.rating || 5.0 %> Rating</p>
						</div>
					</div>
					<% } %>
				</div>

				<!-- Payment Methods -->
				<form action="/customer/process-payment/<%= service._id %>" method="POST" id="paymentForm">
					<div class="payment-methods">
						<h6><i class="fas fa-wallet"></i> Select Payment Method</h6>
						
						<div class="method-options">
							<label class="method-option selected">
								<input type="radio" name="paymentMethod" value="cash" checked>
								<i class="fas fa-money-bill-wave"></i>
								<span>Cash</span>
							</label>
							
							<label class="method-option">
								<input type="radio" name="paymentMethod" value="upi">
								<i class="fas fa-mobile-alt"></i>
								<span>UPI</span>
							</label>
							
							<label class="method-option">
								<input type="radio" name="paymentMethod" value="card">
								<i class="fas fa-credit-card"></i>
								<span>Card</span>
							</label>
							
							<label class="method-option">
								<input type="radio" name="paymentMethod" value="online">
								<i class="fas fa-globe"></i>
								<span>Online</span>
							</label>
						</div>

						<!-- UPI Details (shown when UPI is selected) -->
						<div id="upiDetails" style="display: none; margin-top: 20px;">
							<label class="form-label">Enter UPI Transaction ID</label>
							<input type="text" name="transactionId" class="form-control" placeholder="e.g., 123456789012">
						</div>

						<!-- Card Details (shown when Card is selected) -->
						<div id="cardDetails" style="display: none; margin-top: 20px;">
							<label class="form-label">Enter Transaction Reference</label>
							<input type="text" name="transactionId" class="form-control" placeholder="e.g., TXN123456">
						</div>

						<!-- Online Details (shown when Online is selected) -->
						<div id="onlineDetails" style="display: none; margin-top: 20px;">
							<label class="form-label">Enter Payment Reference</label>
							<input type="text" name="transactionId" class="form-control" placeholder="e.g., PAY123456">
						</div>
					</div>

					<div class="payment-actions">
						<button type="submit" class="btn-pay">
							<i class="fas fa-lock"></i>
							Pay ₹<%= service.fee || service.baseAmount || 100 %> Securely
						</button>
						<div class="secure-badge">
							<i class="fas fa-shield-alt"></i>
							Your payment is secure and encrypted
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/assets/js/script.js"></script>

<script>
	// Payment method selection
	const methodOptions = document.querySelectorAll('.method-option');
	const upiDetails = document.getElementById('upiDetails');
	const cardDetails = document.getElementById('cardDetails');
	const onlineDetails = document.getElementById('onlineDetails');

	methodOptions.forEach(option => {
		option.addEventListener('click', function() {
			methodOptions.forEach(opt => opt.classList.remove('selected'));
			this.classList.add('selected');

			const method = this.querySelector('input').value;

			// Hide all extra fields
			upiDetails.style.display = 'none';
			cardDetails.style.display = 'none';
			onlineDetails.style.display = 'none';

			// Show relevant field
			if (method === 'upi') {
				upiDetails.style.display = 'block';
			} else if (method === 'card') {
				cardDetails.style.display = 'block';
			} else if (method === 'online') {
				onlineDetails.style.display = 'block';
			}
		});
	});
</script>

</body>
</html>
