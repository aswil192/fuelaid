<style>
  :root {
    --primary-color: #5b5fc7;
    --secondary-color: #3a86ff;
    --card-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    --card-radius: 12px;
  }

  body {
    background: linear-gradient(135deg, #f5f7fa 0%, #e8ecf5 100%);
  }

  header{
    background-color: #403d3d!important;
  }
  
  header .navbar, .bg-dark, .navbar-dark, .navbar-light {
    background-color: #403d3d!important;
    background-image: none !important;
    box-shadow: none !important;
  }

  #main-wrapper{
    overflow-y: scroll;  
  }

  #main-wrapper::-webkit-scrollbar {
    display: none;
  }

  /* Page Header */
  .page-header {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    padding: 25px 30px;
    border-radius: 15px;
    margin: 20px;
    box-shadow: 0 8px 25px rgba(91, 95, 199, 0.3);
    display: flex;
    align-items: center;
    gap: 15px;
    animation: slideInDown 0.6s ease-out;
  }

  .page-header h5 {
    color: white;
    margin: 0;
    font-size: 26px;
    font-weight: 700;
  }

  .page-header i {
    font-size: 24px;
    color: white;
  }

  @keyframes slideInDown {
    from {
      opacity: 0;
      transform: translateY(-30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes slideInUp {
    from {
      opacity: 0;
      transform: translateY(30px);
    }
    to {
      opacity: 1;
      transform: translateY(0);
    }
  }

  @keyframes fadeInScale {
    from {
      opacity: 0;
      transform: scale(0.95);
    }
    to {
      opacity: 1;
      transform: scale(1);
    }
  }

  /* Profile Container */
  .profile-container {
    padding: 0 20px 30px;
  }

  /* Profile Header Card */
  .profile-header-card {
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    border-radius: 20px;
    padding: 40px;
    margin-bottom: 25px;
    box-shadow: 0 15px 35px rgba(102, 126, 234, 0.3);
    position: relative;
    overflow: hidden;
    text-align: center;
    animation: slideInUp 0.6s ease-out;
  }

  .profile-header-card::before {
    content: '';
    position: absolute;
    top: -50%;
    right: -30%;
    width: 400px;
    height: 400px;
    background: rgba(255,255,255,0.1);
    border-radius: 50%;
  }

  .profile-avatar-wrapper {
    position: relative;
    z-index: 1;
    display: inline-block;
  }

  .profile-avatar {
    width: 150px;
    height: 150px;
    border-radius: 50%;
    object-fit: cover;
    border: 5px solid rgba(255,255,255,0.3);
    box-shadow: 0 10px 30px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
  }

  .profile-avatar:hover {
    transform: scale(1.05);
    border-color: rgba(255,255,255,0.5);
  }

  .profile-avatar-edit {
    position: absolute;
    bottom: 10px;
    right: 10px;
    width: 40px;
    height: 40px;
    background: white;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    cursor: pointer;
    box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    transition: all 0.3s ease;
  }

  .profile-avatar-edit:hover {
    transform: scale(1.1);
    background: #f8f9fa;
  }

  .profile-avatar-edit i {
    color: #667eea;
    font-size: 16px;
  }

  .profile-name {
    color: white;
    font-size: 28px;
    font-weight: 700;
    margin-top: 20px;
    margin-bottom: 5px;
    position: relative;
    z-index: 1;
  }

  .profile-role {
    color: rgba(255,255,255,0.8);
    font-size: 16px;
    position: relative;
    z-index: 1;
  }

  .profile-role i {
    margin-right: 5px;
  }

  /* Form Card */
  .form-card {
    background: white;
    border-radius: 20px;
    padding: 35px;
    margin-bottom: 25px;
    box-shadow: 0 10px 30px rgba(0,0,0,0.08);
    border: 1px solid #e9ecef;
    animation: fadeInScale 0.6s ease-out;
    transition: all 0.3s ease;
  }

  .form-card:hover {
    box-shadow: 0 15px 40px rgba(0,0,0,0.12);
  }

  .section-header {
    display: flex;
    align-items: center;
    gap: 12px;
    margin-bottom: 25px;
    padding-bottom: 15px;
    border-bottom: 2px solid #e9ecef;
  }

  .section-header .icon-wrapper {
    width: 45px;
    height: 45px;
    border-radius: 12px;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .section-header .icon-wrapper i {
    font-size: 20px;
    color: white;
  }

  .section-header h5 {
    margin: 0;
    font-size: 20px;
    font-weight: 700;
    color: #2c3e50;
  }

  /* Form Controls */
  .form-label {
    font-weight: 600;
    color: #2c3e50;
    margin-bottom: 8px;
    font-size: 14px;
  }

  .form-label i {
    margin-right: 8px;
    color: var(--primary-color);
  }

  .form-control {
    border: 2px solid #e9ecef;
    border-radius: 12px;
    padding: 12px 15px;
    font-size: 15px;
    transition: all 0.3s ease;
  }

  .form-control:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 4px rgba(91, 95, 199, 0.1);
  }

  .form-control:disabled {
    background: #f8f9fa;
    color: #6c757d;
  }

  /* Gender Radio Buttons */
  .gender-options {
    display: flex;
    gap: 20px;
    margin-top: 10px;
  }

  .gender-option {
    display: flex;
    align-items: center;
    gap: 10px;
    padding: 12px 25px;
    border: 2px solid #e9ecef;
    border-radius: 12px;
    cursor: pointer;
    transition: all 0.3s ease;
  }

  .gender-option:hover {
    border-color: var(--primary-color);
    background: #f8f9ff;
  }

  .gender-option.selected {
    border-color: var(--primary-color);
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
  }

  .gender-option input {
    display: none;
  }

  .gender-option i {
    font-size: 18px;
  }

  /* Submit Button */
  .submit-btn {
    background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
    color: white;
    border: none;
    border-radius: 12px;
    padding: 15px 40px;
    font-size: 16px;
    font-weight: 700;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 8px 20px rgba(91, 95, 199, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
    width: 100%;
    max-width: 300px;
    margin: 30px auto 0;
  }

  .submit-btn:hover {
    transform: translateY(-3px);
    box-shadow: 0 12px 30px rgba(91, 95, 199, 0.4);
  }

  .submit-btn:active {
    transform: translateY(0);
  }

  .logo-container img {
    height: 0.9em;
    width: auto;
  }

  /* Responsive */
  @media (max-width: 768px) {
    .page-header {
      margin: 15px 10px;
      padding: 20px;
    }

    .profile-container {
      padding: 0 10px 20px;
    }

    .profile-header-card {
      padding: 30px 20px;
    }

    .profile-avatar {
      width: 120px;
      height: 120px;
    }

    .form-card {
      padding: 25px 20px;
    }

    .gender-options {
      flex-direction: column;
      gap: 10px;
    }
  }
</style>
<main>
	<%- include('../partials/customerSidebar') %>
	
	<div id="main-wrapper">
		<!-- Page Header -->
		<div class="page-header">
			<i class="fas fa-user-cog"></i>
			<h5>My Profile</h5>
		</div>

		<form action="/customer/profile?_method=PUT" method="POST" enctype="multipart/form-data">
			<div class="profile-container">
				<!-- Profile Header Card -->
				<div class="profile-header-card">
					<div class="profile-avatar-wrapper">
						<img id="profilePreview"
							 src="<%= currentUser.profilePic || 'data:image/svg+xml,%3Csvg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 200 200%22%3E%3Ccircle cx=%22100%22 cy=%22100%22 r=%22100%22 fill=%22%23667eea%22/%3E%3Ctext x=%2250%25%22 y=%2250%25%22 dominant-baseline=%22middle%22 text-anchor=%22middle%22 font-size=%2270%22 fill=%22%23fff%22%3E' + currentUser.firstName.charAt(0).toUpperCase() + '%3C/text%3E%3C/svg%3E' %>"
							 alt="Profile Picture"
							 class="profile-avatar">
						<label for="profilePic" class="profile-avatar-edit">
							<i class="fas fa-camera"></i>
						</label>
						<input type="file" name="profilePic" id="profilePic" accept="image/*" style="display: none;">
					</div>
					<h3 class="profile-name"><%= currentUser.firstName %> <%= currentUser.lastName %></h3>
					<p class="profile-role"><i class="fas fa-user"></i>Customer</p>
				</div>

				<!-- Basic Information Card -->
				<div class="form-card">
					<div class="section-header">
						<div class="icon-wrapper" style="background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);">
							<i class="fas fa-user"></i>
						</div>
						<h5>Basic Information</h5>
					</div>

					<div class="row g-4">
						<div class="col-md-6">
							<label for="first-name" class="form-label"><i class="fas fa-id-card"></i>First Name</label>
							<input type="text" name="customer[firstName]" class="form-control" id="first-name" placeholder="Enter first name" value="<%= currentUser.firstName %>" required>
						</div>
						<div class="col-md-6">
							<label for="last-name" class="form-label"><i class="fas fa-id-card"></i>Last Name</label>
							<input type="text" name="customer[lastName]" class="form-control" id="last-name" placeholder="Enter last name" value="<%= currentUser.lastName %>" required>
						</div>
						<div class="col-12">
							<label for="email" class="form-label"><i class="fas fa-envelope"></i>Email Address</label>
							<input type="email" id="email" class="form-control" value="<%= currentUser.email %>" disabled>
						</div>
						<div class="col-12">
							<label class="form-label"><i class="fas fa-venus-mars"></i>Gender</label>
							<div class="gender-options">
								<label class="gender-option <%= currentUser.gender === 'male' ? 'selected' : '' %>">
									<input type="radio" name="customer[gender]" value="male" <%= currentUser.gender === 'male' ? 'checked' : '' %>>
									<i class="fas fa-mars"></i>
									<span>Male</span>
								</label>
								<label class="gender-option <%= currentUser.gender === 'female' ? 'selected' : '' %>">
									<input type="radio" name="customer[gender]" value="female" <%= currentUser.gender === 'female' ? 'checked' : '' %>>
									<i class="fas fa-venus"></i>
									<span>Female</span>
								</label>
							</div>
						</div>
						<div class="col-12">
							<label for="address" class="form-label"><i class="fas fa-map-marker-alt"></i>Address</label>
							<input type="text" name="customer[address]" class="form-control" id="address" placeholder="Enter your full address" value="<%= currentUser.address %>">
						</div>
						<div class="col-12">
							<label for="phone" class="form-label"><i class="fas fa-phone"></i>Phone Number</label>
							<input type="tel" name="customer[phone]" class="form-control" id="phone" placeholder="Enter phone number" value="<%= currentUser.phone %>">
						</div>
					</div>
				</div>

				<!-- Vehicle Information Card -->
				<div class="form-card">
					<div class="section-header">
						<div class="icon-wrapper" style="background: linear-gradient(135deg, #9b59b6 0%, #8e44ad 100%);">
							<i class="fas fa-car"></i>
						</div>
						<h5>Vehicle Information</h5>
					</div>

					<div class="row g-4">
						<div class="col-md-6">
							<label for="vehicle-type" class="form-label"><i class="fas fa-car-side"></i>Vehicle Type</label>
							<input type="text" name="customer[vehicleType]" class="form-control" id="vehicle-type" placeholder="e.g. Bike, Car, Truck" value="<%= currentUser.vehicleType || '' %>">
						</div>
						<div class="col-md-6">
							<label for="vehicle-model" class="form-label"><i class="fas fa-motorcycle"></i>Vehicle Model</label>
							<input type="text" name="customer[vehicleModel]" class="form-control" id="vehicle-model" placeholder="e.g. Honda City, Activa 6G" value="<%= currentUser.vehicleModel || '' %>">
						</div>
						<div class="col-12">
							<label for="license-plate" class="form-label"><i class="fas fa-id-badge"></i>License Plate Number</label>
							<input type="text" name="customer[licensePlate]" class="form-control" id="license-plate" placeholder="e.g. UP16 AB 1234" value="<%= currentUser.licensePlate || '' %>">
						</div>
					</div>
				</div>

				<!-- Submit Button -->
				<button type="submit" class="submit-btn">
					<i class="fas fa-save"></i>
					Update Profile
				</button>
			</div>
		</form>
	</div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/assets/js/script.js"></script>
<script>
	// Profile Picture Preview and Sync
	const fileInput = document.getElementById('profilePic');
	const previewImg = document.getElementById('profilePreview');

	fileInput.addEventListener('change', function () {
		const file = this.files[0];
		if (file && file.type.startsWith('image/')) {
			const reader = new FileReader();
			reader.onload = function (e) {
				const imageData = e.target.result;
				previewImg.src = imageData;
				// Store in localStorage temporarily for header update
				localStorage.setItem('profilePhotoPreview', imageData);
			};
			reader.readAsDataURL(file);
		}
	});

	// Gender Selection
	const genderOptions = document.querySelectorAll('.gender-option');
	genderOptions.forEach(option => {
		option.addEventListener('click', function() {
			genderOptions.forEach(opt => opt.classList.remove('selected'));
			this.classList.add('selected');
		});
	});

	// Form submission handler to sync header
	document.querySelector('form').addEventListener('submit', function() {
		// Clear the localStorage preview when actually submitting
		localStorage.removeItem('profilePhotoPreview');
	});

	// Check for any stored preview on page load
	window.addEventListener('load', function() {
		const storedPreview = localStorage.getItem('profilePhotoPreview');
		if (storedPreview) {
			previewImg.src = storedPreview;
		}
	});
</script>
</body>
