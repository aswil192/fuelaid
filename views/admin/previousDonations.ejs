	<link rel="stylesheet" href="/assets/css/sidebar.css">
	<link rel="icon" type="image/png" href="/assets/images/FUEL AID_logo.png">
	<title> <%= typeof title != 'undefined' ? title : "FuelAid Admin" %> </title>
</head>

<body>
	<%- include('../partials/header') %>
	<%- include('../partials/alerts') %>

<style>
	/* Header Styling */
	header {
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%)!important;
		box-shadow: 0 4px 15px rgba(0,0,0,0.2)!important;
	}
	header .navbar, .bg-dark, .navbar-dark, .navbar-light {
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%)!important;
		background-image: none !important;
		box-shadow: none !important;
	}
	.logo-container img {
		height: 0.9em;
		width: auto;
	}

	/* Global Animations */
	@keyframes slideInDown {
		from { opacity: 0; transform: translateY(-30px); }
		to { opacity: 1; transform: translateY(0); }
	}

	@keyframes fadeInScale {
		from { opacity: 0; transform: scale(0.9); }
		to { opacity: 1; transform: scale(1); }
	}

	/* Main Wrapper */
	#main-wrapper {
		overflow-y: scroll;
		background: linear-gradient(135deg, #f5f7fa 0%, #e8e8e8 100%);
		min-height: 100vh;
	}

	#main-wrapper::-webkit-scrollbar {
		display: none;
	}

	/* Page Header */
	.page-header {
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
		padding: 25px 30px;
		border-radius: 15px;
		margin: 20px;
		box-shadow: 0 8px 25px rgba(142, 68, 173, 0.3);
		display: flex;
		align-items: center;
		gap: 15px;
		animation: slideInDown 0.6s ease-out;
	}

	.page-header h5 {
		color: white;
		margin: 0;
		font-size: 26px;
		font-weight: 700;
	}

	.page-header i {
		font-size: 24px;
		color: white;
	}

	/* Stats Banner */
	.stats-banner {
		background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
		border-radius: 15px;
		padding: 20px 25px;
		margin: 0 20px 25px;
		box-shadow: 0 8px 25px rgba(39, 174, 96, 0.3);
		display: flex;
		align-items: center;
		gap: 15px;
		animation: slideInDown 0.6s ease-out;
	}

	.stats-banner .stat-icon {
		width: 60px;
		height: 60px;
		background: rgba(255,255,255,0.2);
		border-radius: 15px;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.stats-banner .stat-icon i {
		font-size: 28px;
		color: white;
	}

	.stats-banner .stat-content h3 {
		margin: 0;
		font-size: 32px;
		font-weight: 700;
		color: white;
	}

	.stats-banner .stat-content p {
		margin: 0;
		color: rgba(255,255,255,0.8);
		font-size: 14px;
	}

	/* Cards Container */
	.cards-container {
		padding: 0 20px 30px;
	}

	/* Delivery Card */
	.delivery-card {
		background: white;
		border-radius: 15px;
		padding: 25px;
		box-shadow: 0 8px 25px rgba(0,0,0,0.08);
		transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
		border: 1px solid #e9ecef;
		margin-bottom: 20px;
		animation: fadeInScale 0.6s ease-out;
		position: relative;
		overflow: hidden;
	}

	.delivery-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(0,0,0,0.12);
	}

	.delivery-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 5px;
		height: 100%;
		background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
	}

	.card-header-section {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 20px;
	}

	.customer-info {
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.customer-avatar {
		width: 55px;
		height: 55px;
		border-radius: 12px;
		background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.customer-avatar i {
		font-size: 24px;
		color: white;
	}

	.customer-name h6 {
		margin: 0;
		font-size: 18px;
		font-weight: 700;
		color: #2c3e50;
	}

	.customer-name .service-type {
		display: inline-block;
		padding: 4px 12px;
		border-radius: 20px;
		font-size: 11px;
		font-weight: 600;
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
		color: white;
		margin-top: 5px;
	}

	.status-badge {
		padding: 8px 16px;
		border-radius: 25px;
		font-size: 12px;
		font-weight: 700;
		text-transform: uppercase;
	}

	.status-badge.pending {
		background: linear-gradient(135deg, #f39c12 0%, #e67e22 100%);
		color: white;
	}

	.status-badge.inprogress {
		background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
		color: white;
	}

	.status-badge.completed {
		background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
		color: white;
	}

	.card-details {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 15px;
		margin-bottom: 20px;
	}

	.detail-item {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.detail-item i {
		width: 32px;
		height: 32px;
		border-radius: 8px;
		background: rgba(142, 68, 173, 0.1);
		display: flex;
		align-items: center;
		justify-content: center;
		color: #8e44ad;
		font-size: 13px;
	}

	.detail-item .detail-content {
		flex: 1;
	}

	.detail-item .detail-label {
		font-size: 11px;
		color: #7f8c8d;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.detail-item .detail-value {
		font-size: 14px;
		color: #2c3e50;
		font-weight: 600;
	}

	.view-btn {
		display: inline-flex;
		align-items: center;
		gap: 8px;
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
		color: white;
		padding: 10px 25px;
		border-radius: 10px;
		text-decoration: none;
		font-weight: 600;
		transition: all 0.3s ease;
	}

	.view-btn:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(142, 68, 173, 0.3);
		color: white;
	}

	.empty-state {
		text-align: center;
		padding: 60px 20px;
		background: white;
		border-radius: 15px;
		box-shadow: 0 8px 25px rgba(0,0,0,0.08);
	}

	.empty-state i {
		font-size: 60px;
		color: #bdc3c7;
		margin-bottom: 20px;
	}

	.empty-state h5 {
		color: #7f8c8d;
		font-weight: 600;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.page-header {
			margin: 10px;
			padding: 20px;
		}
		.stats-banner {
			margin: 0 10px 15px;
		}
		.cards-container {
			padding: 0 10px 20px;
		}
		.card-details {
			grid-template-columns: 1fr;
		}
		.card-header-section {
			flex-direction: column;
			gap: 15px;
		}
	}
</style>

<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		<!-- Page Header -->
		<div class="page-header">
			<i class="fas fa-history"></i>
			<h5>Previous Deliveries</h5>
		</div>

		<!-- Stats Banner -->
		<div class="stats-banner">
			<div class="stat-icon">
				<i class="fas fa-check-double"></i>
			</div>
			<div class="stat-content">
				<h3><%= previousDonations.length %></h3>
				<p>Completed Delivery Requests</p>
			</div>
		</div>

		<div class="cards-container">
			<% if(previousDonations.length === 0) { %>
				<div class="empty-state">
					<i class="fas fa-inbox"></i>
					<h5>No previous deliveries</h5>
					<p class="text-muted">Completed deliveries will appear here.</p>
				</div>
			<% } else { %>
				<% for(let i=0; i<previousDonations.length; i++) { %>
					<div class="delivery-card" style="animation-delay: <%= i * 0.1 %>s;">
						<div class="card-header-section">
							<div class="customer-info">
								<div class="customer-avatar">
									<i class="fas fa-user"></i>
								</div>
								<div class="customer-name">
									<h6><%= previousDonations[i].customer.firstName + " " + previousDonations[i].customer.lastName %></h6>
									<span class="service-type"><%= previousDonations[i].serviceCategory %></span>
								</div>
							</div>
							<span class="status-badge <%= previousDonations[i].status.toLowerCase() %>"><%= previousDonations[i].status %></span>
						</div>

						<div class="card-details">
							<div class="detail-item">
								<i class="fas fa-layer-group"></i>
								<div class="detail-content">
									<div class="detail-label">Sub-Services</div>
									<div class="detail-value"><%= previousDonations[i].subServices || 'N/A' %></div>
								</div>
							</div>
							<div class="detail-item">
								<i class="fas fa-map-marker-alt"></i>
								<div class="detail-content">
									<div class="detail-label">Location</div>
									<div class="detail-value"><%= previousDonations[i].address || 'N/A' %></div>
								</div>
							</div>
						</div>

						<a href="/admin/donation/view/<%= previousDonations[i]._id %>" class="view-btn">
							<i class="fas fa-eye"></i> View Details
						</a>
					</div>
				<% } %>
			<% } %>
		</div>
	</div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/assets/js/script.js"></script>

</body>
</html>
