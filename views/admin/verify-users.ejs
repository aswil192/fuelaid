    <link rel="stylesheet" href="/assets/css/animate.css">
    
    <link rel="stylesheet" href="/assets/css/owl.carousel.min.css">
    <link rel="stylesheet" href="/assets/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="/assets/css/magnific-popup.css">

    <link rel="stylesheet" href="/assets/css/aos.css">

    <link rel="stylesheet" href="/assets/css/ionicons.min.css">

    <link rel="stylesheet" href="/assets/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="/assets/css/jquery.timepicker.css">

    <link rel="stylesheet" href="/assets/css/font-awesome.min.css">
    
    <link rel="stylesheet" href="/assets/css/flaticon.css">
    <link rel="stylesheet" href="/assets/css/icomoon.css">
	<link rel="stylesheet" href="/assets/css/style.css">
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" integrity="sha512-1ycn6IcaQQ40/MKBW2W4Rhis/DbILU74C1vSrLJxCq57o941Ym01SwNsOMqvEBFlcgUa6xLiPY/NS5R+E6ztJQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
	<link rel="stylesheet" href="/assets/css/sidebar.css">
    <link rel="icon" type="image/png" href="/assets/images/FUEL AID_logo.png">
	<title> <%= typeof title != 'undefined' ? title : "FuelAid Admin" %> </title>
</head>

<body>
	<%- include('../partials/header') %>
	<%- include('../partials/alerts') %>

<style>
	/* Header Styling */
	header {
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%)!important;
		box-shadow: 0 4px 15px rgba(0,0,0,0.2)!important;
	}
	header .navbar, .bg-dark, .navbar-dark, .navbar-light {
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%)!important;
		background-image: none !important;
		box-shadow: none !important;
	}
	.logo-container img {
		height: 0.9em;
		width: auto;
	}

	/* Global Animations */
	@keyframes slideInDown {
		from { opacity: 0; transform: translateY(-30px); }
		to { opacity: 1; transform: translateY(0); }
	}

	@keyframes fadeInScale {
		from { opacity: 0; transform: scale(0.9); }
		to { opacity: 1; transform: scale(1); }
	}

	/* Main Wrapper */
	#main-wrapper {
		overflow-y: scroll;
		background: linear-gradient(135deg, #f5f7fa 0%, #e8e8e8 100%);
		min-height: 100vh;
	}

	#main-wrapper::-webkit-scrollbar {
		display: none;
	}

	/* Page Header */
	.page-header {
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
		padding: 25px 30px;
		border-radius: 15px;
		margin: 20px;
		box-shadow: 0 8px 25px rgba(142, 68, 173, 0.3);
		display: flex;
		align-items: center;
		gap: 15px;
		animation: slideInDown 0.6s ease-out;
	}

	.page-header h5 {
		color: white;
		margin: 0;
		font-size: 26px;
		font-weight: 700;
	}

	.page-header i {
		font-size: 24px;
		color: white;
	}

	/* Cards Container */
	.cards-container {
		padding: 0 20px 30px;
	}

	/* User Card */
	.user-card {
		background: white;
		border-radius: 15px;
		padding: 25px;
		box-shadow: 0 8px 25px rgba(0,0,0,0.08);
		transition: all 0.4s cubic-bezier(0.175, 0.885, 0.32, 1.275);
		border: 1px solid #e9ecef;
		margin-bottom: 20px;
		animation: fadeInScale 0.6s ease-out;
		position: relative;
		overflow: hidden;
	}

	.user-card:hover {
		transform: translateY(-5px);
		box-shadow: 0 15px 40px rgba(0,0,0,0.12);
	}

	.user-card::before {
		content: '';
		position: absolute;
		top: 0;
		left: 0;
		width: 5px;
		height: 100%;
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
	}

	.user-card-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		margin-bottom: 20px;
	}

	.user-info-main {
		display: flex;
		align-items: center;
		gap: 15px;
	}

	.user-avatar {
		width: 60px;
		height: 60px;
		border-radius: 15px;
		background: linear-gradient(135deg, #8e44ad 0%, #9b59b6 100%);
		display: flex;
		align-items: center;
		justify-content: center;
	}

	.user-avatar i {
		font-size: 28px;
		color: white;
	}

	.user-name h6 {
		margin: 0;
		font-size: 18px;
		font-weight: 700;
		color: #2c3e50;
	}

	.user-role {
		display: inline-block;
		padding: 4px 12px;
		border-radius: 20px;
		font-size: 12px;
		font-weight: 600;
		text-transform: capitalize;
		margin-top: 5px;
	}

	.user-role.mechanic {
		background: linear-gradient(135deg, #e67e22 0%, #d35400 100%);
		color: white;
	}

	.user-role.fueldeliveryboy {
		background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
		color: white;
	}

	.user-details {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
		gap: 15px;
		margin-bottom: 20px;
	}

	.detail-item {
		display: flex;
		align-items: center;
		gap: 10px;
	}

	.detail-item i {
		width: 35px;
		height: 35px;
		border-radius: 10px;
		background: rgba(142, 68, 173, 0.1);
		display: flex;
		align-items: center;
		justify-content: center;
		color: #8e44ad;
		font-size: 14px;
	}

	.detail-item .detail-content {
		flex: 1;
	}

	.detail-item .detail-label {
		font-size: 11px;
		color: #7f8c8d;
		text-transform: uppercase;
		letter-spacing: 0.5px;
	}

	.detail-item .detail-value {
		font-size: 14px;
		color: #2c3e50;
		font-weight: 600;
	}

	.user-actions {
		display: flex;
		gap: 10px;
		padding-top: 15px;
		border-top: 1px solid #e9ecef;
	}

	.btn-approve {
		background: linear-gradient(135deg, #27ae60 0%, #2ecc71 100%);
		color: white;
		border: none;
		padding: 10px 25px;
		border-radius: 10px;
		font-weight: 600;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.btn-approve:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(39, 174, 96, 0.3);
		color: white;
	}

	.btn-reject {
		background: linear-gradient(135deg, #e74c3c 0%, #c0392b 100%);
		color: white;
		border: none;
		padding: 10px 25px;
		border-radius: 10px;
		font-weight: 600;
		transition: all 0.3s ease;
		display: flex;
		align-items: center;
		gap: 8px;
	}

	.btn-reject:hover {
		transform: translateY(-2px);
		box-shadow: 0 8px 20px rgba(231, 76, 60, 0.3);
		color: white;
	}

	.empty-state {
		text-align: center;
		padding: 60px 20px;
		background: white;
		border-radius: 15px;
		box-shadow: 0 8px 25px rgba(0,0,0,0.08);
	}

	.empty-state i {
		font-size: 60px;
		color: #bdc3c7;
		margin-bottom: 20px;
	}

	.empty-state h5 {
		color: #7f8c8d;
		font-weight: 600;
	}

	/* Responsive */
	@media (max-width: 768px) {
		.page-header {
			margin: 10px;
			padding: 20px;
		}
		.cards-container {
			padding: 0 10px 20px;
		}
		.user-details {
			grid-template-columns: 1fr;
		}
		.user-actions {
			flex-direction: column;
		}
	}
</style>

<main>
	<%- include('../partials/adminSidebar') %>
	
	<div id="main-wrapper">
		<!-- Page Header -->
		<div class="page-header">
			<i class="fas fa-user-check"></i>
			<h5>Verify Users</h5>
		</div>

		<div class="cards-container">
			<% if(pendingUsers.length === 0 || pendingUsers.filter(u => u.role !== 'admin').length === 0) { %>
				<div class="empty-state">
					<i class="fas fa-check-circle"></i>
					<h5>No pending verifications</h5>
					<p class="text-muted">All users have been verified!</p>
				</div>
			<% } else { %>
				<% for(let i=0; i<pendingUsers.length; i++) { %>
					<% if(pendingUsers[i].role != "admin") { %>
						<div class="user-card" style="animation-delay: <%= i * 0.1 %>s;">
							<div class="user-card-header">
								<div class="user-info-main">
									<div class="user-avatar">
										<i class="fas fa-<%= pendingUsers[i].role === 'mechanic' ? 'tools' : 'gas-pump' %>"></i>
									</div>
									<div class="user-name">
										<h6><%= pendingUsers[i].firstName %> <%= pendingUsers[i].lastName %></h6>
										<span class="user-role <%= pendingUsers[i].role %>"><%= pendingUsers[i].role === 'fueldeliveryboy' ? 'Fuel Delivery Boy' : pendingUsers[i].role %></span>
									</div>
								</div>
							</div>

							<div class="user-details">
								<div class="detail-item">
									<i class="fas fa-id-card"></i>
									<div class="detail-content">
										<div class="detail-label">Aadhaar Card No.</div>
										<div class="detail-value"><%= pendingUsers[i].acn || 'N/A' %></div>
									</div>
								</div>
								<div class="detail-item">
									<i class="fas fa-car"></i>
									<div class="detail-content">
										<div class="detail-label">Driving License No.</div>
										<div class="detail-value"><%= pendingUsers[i].dl || 'N/A' %></div>
									</div>
								</div>
								<div class="detail-item">
									<i class="fas fa-envelope"></i>
									<div class="detail-content">
										<div class="detail-label">Email</div>
										<div class="detail-value"><%= pendingUsers[i].email %></div>
									</div>
								</div>
								<div class="detail-item">
									<i class="fas fa-phone"></i>
									<div class="detail-content">
										<div class="detail-label">Phone</div>
										<div class="detail-value"><%= pendingUsers[i].phone || 'N/A' %></div>
									</div>
								</div>
								<div class="detail-item">
									<i class="fas fa-map-marker-alt"></i>
									<div class="detail-content">
										<div class="detail-label">Address</div>
										<div class="detail-value"><%= pendingUsers[i].address || 'N/A' %></div>
									</div>
								</div>
							</div>

							<div class="user-actions">
								<form action="/admin/verify-users/approve/<%= pendingUsers[i]._id %>" method="POST">
									<input type="hidden" name="type" value="<%= pendingUsers[i].role %>">
									<button type="submit" class="btn-approve">
										<i class="fas fa-check"></i> Approve
									</button>
								</form>
								<form action="/admin/verify-users/reject/<%= pendingUsers[i]._id %>" method="POST">
									<input type="hidden" name="type" value="<%= pendingUsers[i].role %>">
									<button type="submit" class="btn-reject">
										<i class="fas fa-times"></i> Reject
									</button>
								</form>
							</div>
						</div>
					<% } %>
				<% } %>
			<% } %>
		</div>
	</div>
</main>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/assets/js/script.js"></script>

</body>
</html>
