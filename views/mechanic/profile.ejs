	<title> <%= typeof title != 'undefined' ? title : "FuelAid" %> </title>
</head>

<body>
	<%- include('../partials/header') %>
	<%- include('../partials/alerts') %>

<style>
    header{
		background-color: #403d3d!important;
	}
   header .navbar, .bg-dark, .navbar-dark, .navbar-light {
	background-color: #403d3d!important;
      background-image: none !important;
      box-shadow: none !important;
   }
   #main-wrapper{
	overflow-y: scroll;  
}

#main-wrapper::-webkit-scrollbar {
  display: none;                  /* For Chrome, Safari, Edge */
}
.butn{
  background-color: #e69500 !important;
      color: white;
      border: none;
      border-radius: 5px;
      width:100%;
}
.butn:hover {
      background: #f1c999;
    }
	.logo-container img {
    height: 0.9em;
    width: auto;
}
.info{
	color: #fc983c;
}
img.rounded-circle {
    object-fit: cover;
    border: 2px solid #e69500;
}

   </style>
<main>
	<%- include('../partials/mechanicSidebar') %>
	
	<div id="main-wrapper">
		
		<div class="bg-white shadow-sm p-3">
			<br>
			<span class="me-3" id="sidebar-toggler-btn"><i class="fas fa-bars"></i></span>
			<h5 class="m-0 color-theme d-inline-block">Profile</h5>
		</div>
		
		<form action="/mechanic/profile?_method=PUT" method="POST" enctype="multipart/form-data" class="w-75 border ms-3 my-3 p-4 bg-white rounded-2 shadow" style="min-width: 400px;">
			<h5 class="mb-3 info fw-bold">Basic Information</h5>

			<div class="row">
				<div class="mb-4 text-center">
					<!-- Profile Picture with Styling -->
					<img id="profilePreview"
						 src="<%= currentUser.profilePic %>"
						 alt="Profile Picture"
						 class="rounded-circle mb-3 shadow border border-2"
						 style="object-fit: cover; width: 120px; height: 120px;">
			
					<!-- Upload Input -->
					<div class="mt-2">
						<label for="profilePic" class="form-label fw-bold">Upload Profile Picture</label>
						<input class="form-control" 
							   type="file" 
							   name="profilePic" 
							   id="profilePic" 
							   accept="image/*">
					</div>
				</div>
				
				<div class="col-sm-6 mb-4">
					<label for="first-name" class="form-label fw-bold">First Name</label>
					<input type="text" name="mechanic[firstName]" class="form-control" id="first-name" placeholder="Enter first name.." value="<%= currentUser.firstName %>" required>
				</div>

				
				<div class="col-sm-6 mb-4">
					<label for="last-name" class="form-label fw-bold">Last Name</label>
					<input type="text" name="mechanic[lastName]" class="form-control" id="last-name" placeholder="Enter last name.." value="<%= currentUser.lastName %>" required>
				</div>
			</div>
			
			
			<div class="mb-4">
				<label for="email" class="form-label fw-bold">Email</label>
				<input type="email" id="email" class="form-control" value="<%= currentUser.email %>" disabled>
			</div>
			
			<div class="mb-4">
				<span class="d-inline-block me-2 fw-bold">Gender:</span>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="mechanic[gender]" id="male" value="male" <% if(currentUser.gender=='male'){%> checked <%}%> >
					<label class="form-check-label fw-bold" for="male">Male</label>
				</div>
				<div class="form-check form-check-inline">
					<input class="form-check-input" type="radio" name="mechanic[gender]" id="female" value="female" <% if(currentUser.gender=='female'){%> checked <%}%> >
					<label class="form-check-label fw-bold" for="female">Female</label>
				</div>
			</div>
			
			<div class="mb-4">
				<label for="address" class="form-label fw-bold">Address</label>
				<input type="text" name="mechanic[address]" class="form-control" id="address" placeholder="Enter address.." value="<%= currentUser.address %>">
			</div>
			
			<div class="mb-4">
				<label for="phone" class="form-label fw-bold">Phone</label>
				<input type="number" name="mechanic[phone]" class="form-control" id="phone" placeholder="Enter phone.." value="<%= currentUser.phone %>">
			</div>
			
			<h5 class="mb-3 info fw-bold">Professional Details</h5>
		
			<div class="mb-3">
				<label for="experience" class="form-label fw-bold">Years of Experience</label>
				<input type="number" name="mechanic[experience]" class="form-control" id="experience" value="<%= currentUser.experience || '' %>">
			</div>
		
		
			<div class="mb-3">
				<label for="availability" class="form-label fw-bold">Available Time Slots</label>
				<input type="text" name="mechanic[availability]" class="form-control" id="availability" placeholder="e.g. 9am - 6pm" value="<%= currentUser.availability || '' %>">
			</div>

			<h5 class="mb-3 info fw-bold">Vehicle Information</h5>

<div class="mb-3">
    <label for="vehicleType" class="form-label fw-bold">Vehicle Number</label>
    <input type="text" name="mechanic[licensePlate]" class="form-control" id="license-plate"  placeholder="e.g. UP16 AB 1234" value="<%= currentUser.licensePlate || '' %>">
</div>

<div class="mb-3">
    <label for="vehicleModel" class="form-label fw-bold">Vehicle Model</label>
    <input type="text" name="mechanic[vehicleModel]" class="form-control" id="vehicleModel" placeholder="e.g. Honda Activa, Hyundai i10" value="<%= currentUser.vehicleModel || '' %>">
</div>

			<button type="submit" class="butn btn w-75 d-block m-auto mt-4">Update</button>
		</form>
		
		
		
	</div>
</main>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
	<script src="/assets/js/script.js"></script>
	<script>
		const fileInput = document.getElementById('profilePic');
		const previewImg = document.getElementById('profilePreview');
	
		fileInput.addEventListener('change', function () {
			const file = this.files[0];
			if (file && file.type.startsWith('image/')) {
				const reader = new FileReader();
				reader.onload = function (e) {
					previewImg.src = e.target.result;
				};
				reader.readAsDataURL(file);
			}
		});
	</script>
</body>
</html>



